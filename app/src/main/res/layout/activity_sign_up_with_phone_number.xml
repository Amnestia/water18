<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpWithPhoneNumberActivity"
    android:background="@color/whiteBackground">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tf_layout_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="134dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/tfPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whiteBackground"
            android:ems="10"
            android:hint="@string/placeholderPhoneNumber"
            android:inputType="phone"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="44dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginBottom="379dp"
        android:layout_marginEnd="79dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:background="@color/lightBlueBackground"
        android:text="@string/sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_layout_phone" />

</android.support.constraint.ConstraintLayout>